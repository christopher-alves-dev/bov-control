{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "types": ["@types/styled-components", "@types/node"],
    "paths": {
      "@assets/*": ["assets/*"],
      "@types/*": ["@types/*"],
      "@components/*": ["components/*"],
      "@libs/*": ["libs/*"],
      "@routes/*": ["routes/*"],
      "@screens/*": ["screens/*"],
      "@services/*": ["services/*"],
      "@theme/*": ["theme/*"],
      "@utils/*": ["utils/*"]
    }
  },
}
